        <link rel="stylesheet" type="text/css" href="stylesheets/forms.css" />
        <link rel="stylesheet" type="text/css" href="stylesheets/storeHome.css" />
        <link rel="stylesheet" type="text/css" href="stylesheets/common.css" />

        <title>Admin View: Dispatch Orders</title>
        </style>
    </head>

    <body>
        <header class="header">
            <a href="/index">
                <img src="/images/logo (1).png" alt="D'fitKlub Logo" class="logo" id="home" />
            </a>
            <nav class="profile-nav">
                <ul class="main-nav-user-list">
                    <li>
                        <div style="color: #fff">
                            <b><%= username %></b>
                            <span class="profile-btn">
                                <button class="profile-btn">
                                    <ion-icon
                                        name="ellipsis-vertical"
                                        class="toggle-focus"
                                        id="profile-btn"
                                    ></ion-icon>
                                </button>
                                <ul class="profile-div" id="profile-div">
                                    <li>
                                        <ion-icon name="person-outline"></ion-icon>
                                        <a href="/myProfile">My Profile</a>
                                    </li>
                                    <li>
                                        <ion-icon name="log-out-outline"></ion-icon>
                                        <a href="/logOut">Logout</a>
                                    </li>
                                </ul>
                            </span>
                        </div>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            <section>

                    <h2 class="lines"></h2>
                    <h1 class="sub-heading">Dispatch Orders History</h1>
                    <h2 class="lines"></h2>
                    <% let count = 0; %> 
                    <% let total_price = 0; %> 
                    <% let total_items = 0; %>

                    <table id="order" style="color: #f0f8ff;">
                        <thead>
                            <tr>
                        <th style="width: 5%">S.No.:</th>
                        <th style="width: 20%">Order ID</th>
                        <th style="width: 20%">User ID</th>
                        <th style="width: 10%">Product ID</th>
                        <th style="width: 10%">Quantity</th>
                        <th style="width: 10%">Price</th>
                        <th style="width: 15%">Date/Time</th>
                        <th style="width: 10%">Dispatch</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% let size = orders_dispatched.length %>
                        <% if (size==0) { %>
                            <h1>NO Pending Orders</h1><br><br>
                        <% } else{ %>
                            <% for (let i=0;i<size;i++) { %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= orders_dispatched[i].order_id %></td>
                                    <td><%= orders_dispatched[i].user_id %></td>
                                    <td><%= orders_dispatched[i].prod_id %></td>
                                    <td><%= orders_dispatched[i].quantity %></td>
                                    <td><%= orders_dispatched[i].price %></td>
                                    <td><%= orders_dispatched[i].datetime %></td>
                                    <td><input type="checkbox" name="<%= orders_dispatched[i].order_id%>" id="dispatch" value="true" onchange="checkDispatch()"></td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <button class="other-btns" onclick="dispatching()" style="width: 24rem; margin-left: 40%;">Click to Dispatch</button>
            </section>
        </main>
        <footer class="footer" id="footer">
            <div class="grid--footer">
                <div class="address-col">
                    <address class="contacts grid--3--cols">
                        <div>
                            <figure class="location">
                                <ion-icon class="contacts-icon" name="location-outline"></ion-icon>
                                <figcaption>
                                    <p>39, Sector 4, HSR Layout, Bengaluru, Karnataka 560102</p>
                                </figcaption>
                            </figure>
                        </div>
                        <figure class="mobile">
                            <ion-icon class="contacts-icon" name="call-outline"></ion-icon>
                            <figcaption>
                                <a class="footer-link" href="tel:415-201-6370">044-78945234</a><br>
                                <a class="footer-link" href="tel:415-201-6370">044-78945235</a>
                            </figcaption>
                        </figure>
                        <figure class="mail">
                            <ion-icon class="contacts-icon" name="mail-outline"></ion-icon>
                            <figcaption>
                                <a class="footer-link" href="malito:help@fitklub.com"
                                >help@fitklub.com</a
                                >
                                <a class="footer-link" href="malito:hello@fitklub.com"
                                    >hello@fitklub.com</a
                                    >
                                </figcaption>
                            </figure>
                    </address>
                </div>
                <div class="follow grid--5--cols">
                    <a href="#">
                        <ion-icon class="follow-icon" name="logo-facebook"></ion-icon>
                    </a>
                    <a href="#">
                        <ion-icon class="follow-icon" name="logo-instagram"></ion-icon>
                    </a>
                    <a href="#">
                        <ion-icon class="follow-icon" name="logo-linkedin"></ion-icon>
                    </a>
                    <a href="#">
                        <ion-icon class="follow-icon" name="logo-twitter"></ion-icon>
                    </a>
                    <a href="#">
                        <ion-icon class="follow-icon" name="logo-youtube"></ion-icon>
                    </a>
                </div>
                <a class="" href="/">
                    <img src="/images/logo (1).png" alt="D'fitKlub Logo" class="footer-logo logo" />
                </a>
                <div class="copy">
                    <p class="follow-us-text">follow us</p>
                    <br />
                    <br />
                    <p class="copyright">
                        Copyright Â© <span class="year">2023</span> by D-fitKlub.Inc. All rights are
                        reserved.
                    </p>
                </div>
            </div>
            <div class="credit">Created with <span>&hearts;</span> by &dash; KD</div>
        </footer>
    </body>

